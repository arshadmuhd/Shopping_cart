<section>
    <div class="container">
        <div class="row mt-2">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table table-bordered mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Product</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
       <th scope="col">Image</th>
        <th scope="col">Update</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Price}}</td>
      <td><img src="/product-images/{{this._id}}.jpg" style="    height: 4rem; width: 3rem; "  alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary" >Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.Name}}?')" >Delete</a>
        <!--<a href="/admin/delete-product?id={{this._id}}&name=arshad" class="btn btn-danger" >Delete</a>!-->
    
      </td>

    </tr>
   {{/each}} 

  </tbody>
</table>
    </div>
</section>